<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/navbar.ejs'); %>
  
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Perguntar</a>
        <hr>
        <% perguntas.forEach(pegunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3>
                        <%= pegunta.titulo %>
                    </h3>
                    <div class="card-footer">
                        <a href="/pergunta/<%= pegunta.id %>"><button class="btn btn-primary">Responder</button></a>
                    </div>
                </div>
            </div>
        <% }) %> 

    </div>

</body>
<%- include('partials/footer.ejs'); %>